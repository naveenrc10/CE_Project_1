pipeline {
    agent any
    parameters {
        string(name: 'bucketname', defaultValue: 'terraform-state-2025-05-24', description: 'Bucket Name')
        
    }

     
    stages {
        stage('Setup'){
            steps{
               sh '''
                    bucket_name=terraform-state-2025-05-24

                     if aws s3 ls "$bucket_name | grep -q 'NoSuchBucket';then
                        echo "Bucket does not exist. Creating..."
                        aws s3api create-bucket --bucket "$bucket_name" --region us-east-1 --create-bucket-configuration LocationConstraint=us-east-1
                    else
                        echo "Bucket exists!"
                    fi
                '''



            }
        }
        stage('Terraform Refresh') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-credentials-id', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        cd aws_infra_setup
                        terraform init
                        terraform refresh
                    '''
                }
            }
        }    
        
    }
}