pipeline {
    agent any

    stages {
        stage('Terraform Refresh') {
             docker {
                    image 'hashicorp/terraform:light'
                    reuseNode true
                }

            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-credentials-id', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                    export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                    export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
                    cd aws_infra_setup
                    terraform init
                    terraform refresh
                    '''
                }
            }
        }    
        stage('Initialize') {
            docker {
                    image 'hashicorp/terraform:light'
                    reuseNode true
            }
            steps {
                
                withCredentials([usernamePassword(credentialsId: 'your-aws-credentials-id', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh """
                        export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                        export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
                        cd terraform
                        terraform apply -target=null_resource.ip_write1 -auto-approve
                    """
                }
            }
        }
    }
}