pipeline {
    agent any
    environment {
        AWS_CREDENTIALS = credentials('aws-credentials-id')
    }
    stages {
        stage('Terraform Refresh') {
            agent {
                docker {
                    image 'hashicorp/terraform:light'
                    reuseNode true
                }
            }
          
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-credentials-id', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                    export AWS_ACCESS_KEY_ID=$AWS_CREDENTIALS_PSW
                    export AWS_SECRET_ACCESS_KEY=$AWS_CREDENTIALS_USR
                    cd aws_infra_setup
                    terraform init
                    terraform refresh
                    '''
                }
            }
        }    
        
    }
}