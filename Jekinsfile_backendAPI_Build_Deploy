pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17'
                     args '-v $HOME/.m2:/root/.m2'
                     reuseNode true
                }
            }
            steps {
                sh '''
                    cd backendAPI
                    mvn clean install
                '''
            }
        }
    }
}