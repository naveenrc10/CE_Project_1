pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo $HOME
                    ls -a $HOME
                    whoami
                    mvn -X | grep "Using local repository"
                '''
            }
        }
    }
}